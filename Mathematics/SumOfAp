import java.util.*;
import java.lang.*;
import java.io.*;
class SumOfAp
 {
	public static void main (String[] args)
	 {
	 //code
	 Scanner sc=new Scanner(System.in);
	 int t=sc.nextInt();
	 for(int i=0;i<t;i++){
	     double a=sc.nextDouble();
	     double d=sc.nextDouble();
	     double n=sc.nextDouble();
	     double sum=0;
	     sum=(n/2)*((2*a)+(n-1)*d);
	     System.out.println(sum);
	     
	 }
	 }
}
